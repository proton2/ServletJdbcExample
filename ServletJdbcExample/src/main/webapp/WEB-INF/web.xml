<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

<display-name>SimpleJspServletDB</display-name>
<welcome-file-list>
	<welcome-file>index.jsp</welcome-file>
</welcome-file-list>

    <context-param>
        <param-name>dbproperties</param-name>
        <param-value>db.properties</param-value>
    </context-param>
    <context-param>
        <param-name>uploads</param-name>
        <param-value>c:\mydemoapp\uploads</param-value>
    </context-param>

    <servlet>
        <servlet-name>AttachController</servlet-name>
        <servlet-class>com.java.servlets.controller.AttachController</servlet-class>
        <multipart-config>
            <multipart-config>
                <max-file-size>10485760</max-file-size>
                <max-request-size>20971520</max-request-size>
                <file-size-threshold>5242880</file-size-threshold>
            </multipart-config>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttachController</servlet-name>
        <url-pattern>/AttachController</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>UserController</display-name>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.java.servlets.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>WorkTaskController</display-name>
        <servlet-name>WorkTaskController</servlet-name>
        <servlet-class>com.java.servlets.controller.WorkTaskController</servlet-class>
        <multipart-config>
            <multipart-config>
                <max-file-size>10485760</max-file-size>
                <max-request-size>20971520</max-request-size>
                <file-size-threshold>5242880</file-size-threshold>
            </multipart-config>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>WorkTaskController</servlet-name>
        <url-pattern>/WorkTaskController</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>Check access</description>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.java.servlets.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>com.java.servlets.controller.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    
    <listener>
    	<listener-class>com.java.servlets.listener.AppContextListener</listener-class>
  	</listener>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.java.servlets.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
         
</web-app>